<?xml version="1.0" encoding="utf-8"?>
<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!--CUSTOM THEME-->
    <style name="Theme.Custom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/eight_bank_dark</item>
        <item name="colorOnPrimary">@color/eight_bank_dark</item>
        <item name="colorOnBackground">@color/eight_bank_light</item>

        <!--pdf viewer-->
        <item name="pdf_viewer_background_color">@style/custom_pdf_viewer_background_color</item>
        <item name="pdf_viewer_toolbar_background_color">@style/custom_pdf_viewer_toolbar_background_color</item>
        <item name="pdf_viewer_toolbar_text">@style/custom_pdf_viewer_toolbar_text</item>
        <item name="pdf_viewer_back_button_color">@color/eight_bank_dark</item>

        <!--fullscreen-->
        <item name="fullscreen_background_color">@style/custom_fullscreen_background_color</item>
        <item name="fullscreen_toolbar_background_color">@style/custom_fullscreen_toolbar_color</item>
        <item name="fullscreen_toolbar_text">@style/custom_fullscreen_toolbar_text</item>
        <item name="fullscreen_back_button_color">@color/eight_bank_dark</item>

        <!--Welcome-->
        <item name="custom_welcome_enabled">true</item>
        <item name="welcome_background_color">@style/custom_welcome_background_color</item>
        <item name="welcome_toolbar_background_color">@style/custom_welcome_toolbar_color</item>
        <item name="welcome_toolbar_text">@style/custom_welcome_toolbar_text</item>
        <item name="start_chat_button">@style/custom_start_chat_button</item>
        <item name="welcome_hello_name_text">@style/custom_welcome_hello_text</item>
        <item name="welcome_greeting_text">@style/custom_welcome_greeting_text</item>
        <item name="welcome_back_button_color">@color/eight_bank_dark</item>

        <!--Quick Links/webView-->
        <item name="custom_welcome_quick_links_enabled">true</item>
        <item name="webView_toolbar_background_color">@style/custom_webView_toolbar_background_color</item>
        <item name="webView_toolbar_text">@style/custom_webView_toolbar_text</item>
        <item name="webView_back_button_color">@color/md_white_1000</item>
        <item name="webView_back_button">@style/custom_webView_back_button</item>

        <!--Messaging-->
        <item name="messaging_background_color">@color/eight_bank_background</item>
        <item name="messaging_toolbar_background_color">@style/custom_messaging_toolbar_background_color</item>
        <item name="messaging_toolbar_text">@style/custom_messaging_toolbar_text</item>
        <item name="messaging_toolbar_text_color">@color/eight_bank_dark</item>
        <item name="messaging_back_button_color">@color/eight_bank_dark</item>
        <item name="messaging_end_chat_button">@style/custom_messaging_end_chat_button</item>
        <item name="messaging_date_text">@style/custom_messaging_date_text</item>
        <item name="messaging_date_bottom_bar">@style/custom_messaging_date_bottom_bar</item>
        <item name="messaging_bar_above_input_text">@color/eight_bank_dark</item>
        <item name="messaging_input_background_color">@style/custom_messaging_input_background_color</item>
        <item name="messaging_attachment_button">@style/custom_messaging_attachment_button</item>
        <item name="messaging_send_button">@style/custom_messaging_send_button</item>
        <item name="messaging_send_button_greyed_out">@style/custom_messaging_send_button_greyed_out</item>
        <item name="messaging_send_button_color">@color/eight_bank_dark</item>
		<item name="messaging_send_button_greyed_out_color">@color/custom_greyed_out_send</item>
        <item name="messaging_send_text">@style/custom_messaging_send_text</item>
        <item name="message_send_bubble_color">@color/eight_bank_dark</item>
        <item name="message_send_bubble_text_color">@color/md_white_1000</item>
        <item name="message_receive_bubble_color">@color/eight_bank_light</item>
        <item name="message_receive_bubble_text_color">@color/md_white_1000</item>
        <item name="listpicker_button_color">@color/eight_bank_light</item>
        <item name="typing_color">@color/eight_bank_dark</item>
    </style>

    <!--Button-->
    <style name="custom_eGain_button">
        <item name="button_x">860</item>
        <item name="button_y">1630</item>
        <item name="button_width">180</item>
        <item name="button_height">180</item>
        <item name="button_color">@color/eight_bank_dark</item>
        <item name="button_background_color">@color/trans</item>
        <item name="button_image">@drawable/ic_icon_chat_launch_1</item>
    </style>

    <!--pdf Viewer-->
    <style name="custom_pdf_viewer_background_color">
        <item name="android:background">@color/eight_bank_background</item>
    </style>

    <style name="custom_pdf_viewer_toolbar_background_color">
        <item name="android:background">@color/eight_bank_background</item>
    </style>

    <style name="custom_pdf_viewer_toolbar_text">
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:text">"title.pdf"</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--fullscreen-->
    <style name="custom_fullscreen_background_color">
        <item name="android:background">@color/eight_bank_background</item>
    </style>

    <style name="custom_fullscreen_toolbar_color">
        <item name="android:background">@color/eight_bank_background</item>
    </style>

    <style name="custom_fullscreen_toolbar_text">
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">"fullscreen-title.pdf"</item>
    </style>

    <!--Welcome-->
    <style name="custom_welcome_background_color">
        <item name="android:background">@color/eight_bank_background</item>
    </style>

    <style name="custom_welcome_toolbar_color">
        <item name="android:background">@color/eight_bank_background</item>
    </style>

    <style name="custom_welcome_toolbar_text">
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="android:text">"Eight Bank Chat"</item>
    </style>

    <style name="custom_start_chat_button" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/eight_bank_dark</item>
        <item name="android:text">"Start Chat"</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="custom_welcome_hello_text">
        <item name="android:text">"@string/launch_welcome_greet"</item>
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="custom_welcome_greeting_text">
        <item name="android:text">"How can we help you today?"</item>
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:textSize">32sp</item>
    </style>

<!--    webView-->

    <style name="custom_webView_toolbar_background_color">
        <item name="android:background">@color/eight_bank_dark</item>
    </style>

    <style name="custom_webView_toolbar_text">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="custom_webView_back_button">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!--Quick Links-->
    <array name="custom_quick_links">
        <item>
            <item name="type">link</item>
            <item name="welcome_link">"https://www.egain.com/"</item>
            <item name="welcome_link_title">"Visit Us"</item>
        </item>
        <item>
            <item name="type">link</item>
            <item name="welcome_link">"https://ebrain.egain.com/kb/featureguides/home"</item>
            <item name="welcome_link_title">"eGain 21 Feature Guides"</item>
        </item>
        <item>
            <item name="type">link</item>
            <item name="welcome_link">"https://ebrain.egain.com/kb/newin21/home"</item>
            <item name="welcome_link_title">"What's New in eGain 21"</item>
        </item>
        <item>
            <item name="type">phone</item>
            <item name="welcome_link">"tel:8008214358"</item>
            <item name="welcome_link_title">"Contact Us"</item>
        </item>
    </array>

    <style name="custom_messaging_toolbar_background_color">
        <item name="android:background">@color/eight_bank_background</item>
    </style>

    <style name="custom_messaging_toolbar_text">
        <item name="android:text">"Eight Bank Chat"</item>
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="custom_messaging_end_chat_button">
        <item name="backgroundTint">@color/eight_bank_background</item>
        <item name="android:text">"End Chat"</item>
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="custom_messaging_date_text">
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="custom_messaging_date_bottom_bar">
        <item name="android:background">@color/eight_bank_dark</item>
    </style>

    <style name="custom_messaging_input_background_color">
        <item name="android:background">@color/eight_bank_background</item>
    </style>

    <style name="custom_messaging_attachment_button">
        <item name="backgroundTint">@color/eight_bank_dark</item>
        <item name="tint">@color/md_white_1000</item>
        <item name="fabCustomSize">30dp</item>
        <item name="maxImageSize">15dp</item>
    </style>

    <style name="custom_messaging_send_button">
        <item name="backgroundTint">@color/eight_bank_dark</item>
        <item name="android:text">"Send"</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">14sp</item>
    </style>
	
	<style name="custom_messaging_send_button_greyed_out">
	    <item name="backgroundTint">@color/custom_greyed_out_send</item>
        <item name="android:text">"Send"</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="custom_messaging_send_text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/eight_bank_dark</item>
        <item name="android:hint">"Hint..."</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/eight_bank_dark</item>
    </style>

    <style name="custom_message_send_bubble_text">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="custom_message_receive_bubble_text">
        <item name="android:textColor">@color/md_white_1000</item>
    </style>

    <style name="custom_messaging_end_chat_AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/custom_NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/custom_PositiveButtonStyle</item>
        <item name="android:textColor">@color/eight_bank_dark</item>
    </style>

    <style name="custom_NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/eight_bank_dark</item>
    </style>

    <style name="custom_PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/eight_bank_dark</item>
    </style>
</resources>
