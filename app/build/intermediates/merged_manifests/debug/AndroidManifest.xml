<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.egain.ps.egainmessagingsample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="29"
        android:targetSdkVersion="31" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_MEDIA_LOCATION" />

    <queries>
        <intent>
            <action android:name="android.intent.action.VIEW" />

            <category android:name="android.intent.category.BROWSABLE" />

            <data android:scheme="https" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EGainMessagingSample" >
        <activity
            android:name="com.egain.ps.egainmessagingsample.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="customerApp.customerApp"
            android:exported="true" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity android:name="com.egain.ps.sdk.internal.data.ui.webView" />
        <activity android:name="com.egain.ps.sdk.internal.data.ui.fullscreen" />
        <activity android:name="com.egain.ps.sdk.internal.data.ui.pdfViewer" />
        <activity android:name="com.egain.ps.sdk.internal.data.ui.progressBar" />
        <activity android:name="com.egain.ps.sdk.internal.data.ui.progressBar_EndConv" />
        <activity
            android:name="com.egain.ps.sdk.activity.EgainChatWelcomeActivity"
            android:exported="true"
            android:label="@string/title_welcome_activity"
            android:theme="@style/Theme.EGainLiveChat.NoActionBar" />
        <activity
            android:name="com.egain.ps.sdk.activity.EgainChatMessagingActivity"
            android:exported="true"
            android:label="Messaging"
            android:launchMode="singleTask"
            android:theme="@style/Theme.EGainLiveChat.NoActionBar" />
        <activity
            android:name="pub.devrel.easypermissions.AppSettingsDialogHolderActivity"
            android:exported="false"
            android:label=""
            android:theme="@style/EasyPermissions.Transparent" />
        <activity
            android:name="io.intercom.android.sdk.activities.IntercomMessengerActivity"
            android:configChanges="screenSize|orientation"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Intercom_PanelTheme"
            android:windowSoftInputMode="stateUnchanged|adjustResize" />
        <activity
            android:name="io.intercom.android.sdk.lightbox.LightBoxActivity"
            android:configChanges="screenSize|orientation"
            android:exported="false"
            android:theme="@style/Intercom_LightBoxTheme"
            android:windowSoftInputMode="stateUnchanged|adjustResize" />
        <activity
            android:name="io.intercom.android.sdk.activities.IntercomPostActivity"
            android:configChanges="screenSize|orientation"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Intercom_PostTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="io.intercom.android.sdk.activities.IntercomNoteActivity"
            android:configChanges="screenSize|orientation"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Intercom_NoteTheme"
            android:windowSoftInputMode="stateUnchanged|adjustResize" />
        <activity
            android:name="io.intercom.android.sdk.activities.IntercomSheetActivity"
            android:configChanges="screenSize|orientation"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Intercom_ModalActivityTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="io.intercom.android.sdk.activities.IntercomVideoActivity"
            android:configChanges="screenSize|orientation"
            android:exported="false"
            android:launchMode="singleTop"
            android:theme="@style/Intercom_PanelTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="io.intercom.android.sdk.activities.IntercomCarouselActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Intercom_CarouselTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="io.intercom.android.sdk.helpcenter.collections.IntercomHelpCenterActivity"
            android:theme="@style/Intercom.BaseMaterial" />
        <activity
            android:name="io.intercom.android.sdk.helpcenter.articles.ArticleActivity"
            android:exported="false"
            android:theme="@style/Intercom.BaseMaterial"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="io.intercom.android.sdk.survey.ui.IntercomSurveyActivity"
            android:exported="false"
            android:theme="@style/Intercom.BaseMaterial.Compose"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="io.intercom.android.sdk.helpcenter.search.IntercomArticleSearchActivity"
            android:exported="false"
            android:theme="@style/Intercom.BaseMaterial" />

        <receiver
            android:name="io.intercom.android.sdk.push.IntercomPushBroadcastReceiver"
            android:exported="false" >
            <intent-filter>
                <action android:name="io.intercom.android.sdk.INTERCOM_PUSH_OPENED" />
            </intent-filter>
            <intent-filter>
                <action android:name="io.intercom.android.sdk.INTERCOM_PUSH_DISMISSED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="io.intercom.android.sdk.IntercomInitializeContentProvider"
            android:authorities="com.egain.ps.egainmessagingsample.IntercomInitializeContentProvider"
            android:exported="false" />

        <activity
            android:name="com.intercom.input.gallery.GalleryInputFullScreenActivity"
            android:theme="@style/intercom_composer_full_screen_theme"
            android:windowSoftInputMode="adjustNothing|stateVisible" />
        <activity
            android:name="com.intercom.input.gallery.GalleryLightBoxActivity"
            android:configChanges="orientation|screenLayout|density|screenSize"
            android:theme="@style/intercom_composer_full_screen_theme" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.egain.ps.egainmessagingsample.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <activity
            android:name="androidx.compose.ui.tooling.PreviewActivity"
            android:exported="true" />

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.egain.ps.egainmessagingsample.com.squareup.picasso"
            android:exported="false" />

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>